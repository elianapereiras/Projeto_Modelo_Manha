<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Exemplo_cabecalho_rodape</title>

    <!--Fazendo referência ao CDN do bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css">
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <!-- Menu -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><img src="~/img/logo.png" /></a>
                <h2 class="ms-3">Sistema de Solicitação de Manutenção Predial</h2>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link active" href="#">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Home")">Solicitações</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("FAQ","Home")">FAQ</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- flex-fill faz o conteúdo ocupar o espaço sobrando -->
    <main role="main" class="flex-fill pb-3">
        @RenderBody()
    </main>

    <!-- mt-auto empurra o rodapé para baixo -->
    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - Exemplo_cabecalho_rodape -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

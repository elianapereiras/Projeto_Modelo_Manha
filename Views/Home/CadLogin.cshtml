<main>
    <h2>CADASTRO DE USUÁRIOS</h2>
    <div class="form-control">
        <form method="post">
            <h2 class="form-text text-primary">Cadastro de Login</h2>

            <div class="form-control">
                <label for="Nome" class="form-label">Nome</label>
                <input type="text" id="Nome" name="Nome" placeholder="Digite aqui seu nome" class="form-text" />
            </div>

            <div class="form-control">
                <label for="Email" class="form-label">Email</label>
                <input type="email" id="email" name="email" placeholder="Digite aqui seu email" class="form-text" />
            </div>

            <div class="form-control">
                <label for="Senha" class="form-label">Senha</label>
                <input type="password" id="senha" name="senha" placeholder="Digite sua senha" class="form-text" />
            </div>
            <div>
                <input type="submit" id="btnEnviar" name="btnenviar" Value="Cadastrar"class="btn-success" />
                
            </div>
            
            @Html.Raw(ViewBag.Msg)
        </form>
    </div>

</main>
